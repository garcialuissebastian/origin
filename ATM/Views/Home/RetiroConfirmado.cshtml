
@{
    ViewData["Title"] = "RetiroConfirmado";
    Layout = "~/Views/Shared/_MasterAtm.cshtml";
}
@model Be.Tarjetas

<div class="text-center">
    <h1 class="display-4">ATM - Retiro Confirmado </h1>



</div>


<div class="container">




    <div style="margin-top:50px">
        <div class="form-group row">
            <div class="col-md-3"></div>
            <label asp-for="Nro" class="control-label col-md-2 col-4"></label>
            <div class="col-8  col-md-4">
                <input type="text" asp-for="Nro" class="form-control" readonly />
            </div>
            <div class="col-md-3">

            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-3"></div>
            <label asp-for="ListOperaciones[0].Fecha_Op" class="control-label col-md-2 col-4"></label>
            <div class="col-8  col-md-4">
                <input type="text" asp-for="ListOperaciones[0].Fecha_Op" class="form-control" readonly />
            </div>
            <div class="col-md-3">

            </div>
        </div>


        <div class="form-group row">
            <div class="col-md-3"></div>
            <label asp-for="ListOperaciones[0].Monto" class="control-label col-md-2 col-4"></label>
            <div class="col-8  col-md-4">
                <input type="text" asp-for="ListOperaciones[0].Monto" class="form-control" readonly />
            </div>
            <div class="col-md-3">

            </div>
        </div>


        <div class="form-group row">
            <div class="col-md-3"></div>
            <label asp-for="Balance" class="control-label col-md-2 col-4"></label>
            <div class="col-8  col-md-4">
                <input type="text" asp-for="Balance" class="form-control" readonly />
            </div>
            <div class="col-md-3">

            </div>
        </div>



        <div class="form-group row">
            <div class="col-md-3"></div>

            <div class="col-6  col-md-3">
                <button class="btn btn-primary" style="width:100%" onclick="window.history.back();">Atrás</button>
            </div>

            <div class="col-6  col-md-3">
                <button class="btn btn-info" style="width:100%" onclick="window.location.href='/Home/Salir'">Salir</button>
            </div>
            <div class="col-md-3">

            </div>
        </div>


    </div>

</div>